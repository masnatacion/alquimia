div.relacionados{
    width: 628px;
    margin-bottom: 8px;
    overflow: hidden;
}

div.relacionados .titulo{
    background-color: #0079c2;
    width: 628px;
    height: 32px;
    position: relative;
    z-index: 100;
}

.mobile div.relacionados ul li .imagen{
    width:192px;
    height: 108px;
}

div.relacionados .titulo h2{
    font-size: 14px;
    padding: 5px 0px 0px 6px;
    display: block;
    text-shadow: 1px 1px 1px rgba(0,0,0,0.5);
    font-weight: bold;
}
div.relacionados ul li h3{
    color: #535353;
    font-size: 13px;
    height: 38px;
    overflow: hidden;
}

div.relacionados ul{
    margin-top: 10px;
}

div.relacionados ul li{
    width: 192px;
    float: left;
    cursor: pointer;
    margin-bottom: 10px;
}
div.relacionados ul li:first-child,
div.relacionados ul li:nth-child(2),
div.relacionados ul li:nth-child(4),
div.relacionados ul li:nth-child(5)
{
    margin-right: 26px;
}


div.relacionados ul li:hover .social .num,
div.relacionados ul li .social .social-stub {
    display: none;
}

div.relacionados ul li .social .num,
div.relacionados ul li:hover .social .social-stub{
    display: block;
}

div.relacionados ul li .social .num,
div.relacionados ul li .social .social-stub {
    margin: 7px 56px 0px 0px;
    float: left;
}


/*MOBILE*/
.mobile div.relacionados ul li{
    padding: 10px 6px 10px 6px;
    margin: 1px 1px 1px 1px;
    width: 100%;
}

.mobile div.relacionados ul li .social{
    display: none;
}

.mobile div.relacionados ul li img {
    width: 120px;
    height: 80px;
}

.mobile div.relacionados ul li .imagen{
    float: left;
    width: 120px;
    height: 80px;
}

.mobile div.relacionados ul li div.contenido {
    position: absolute;
    margin: 0px 0px 0px 130px;
}

.mobile div.relacionados .titulo h2 {
    font-size: 13px;
    padding: 7px 0px 0px 6px;
}

.mobile div.relacionados ul li h3{
    height: 80px;
}
