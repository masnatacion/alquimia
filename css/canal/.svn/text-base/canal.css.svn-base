.canal{
    overflow: hidden;
    width: 628px;
    margin: 0 auto 8px 0px;
}

.canal ul.items{
    overflow: hidden;
}

.canal ul.items li{
    cursor: pointer;
    overflow: hidden;
    clear: both;
    padding: 10px 10px 10px 0px;
}

.canal ul.items li:first-child{
    padding: 0px 10px 10px 0px;
}



/*
.canal ul.items li:hover{
    background: white;
    border-top: 1px solid #c7c7c7;
    border-bottom: 1px solid #c7c7c7;
}
*/
.canal ul.items li .imagen{
    float: left;
    margin-right: 15px;
    width: 157px;
}

.canal ul.items li:first-child .imagen{
    width: 350px;
    float: left;
    margin-right: 15px;
}

.canal ul.items li:first-child .contenido{
    float: left;
    width: 250px;
}

.canal ul.items li i.icono.video {
    background-position: -270px -68px;
}

.canal ul.items li i.icono {
    display: block;
    background: url('../../img/sprite.png');
    background-position: -220px -68px;
    height: 25px;
    width: 38px;
    position: relative;
    float: right;
    margin-bottom: -21px;
    bottom: 50px;
    right: 5px;
}

.canal ul.items li:hover .social .num,
.canal ul.items li .social .social-stub {
    display: none;
}

.canal ul.items li .social .num,
.canal ul.items li:hover .social .social-stub{
    display: block;
}

.canal ul.items li .social .num,
.canal ul.items li .social .social-stub {
    margin: 7px 50px 0px 0px;
    float: left;
}
.canal ul.items li h2,
.canal ul.items li h1
{
    font-size: 18px;
    color: #555555;
}

.canal ul.items li h2{
    height: 25px;
    overflow: hidden;
}

.canal ul.items li h1{
    font-size: 22px;
    clear: both;
    padding-top: 5px;
}
.canal ul.items li:first-child p{
    margin-bottom: 10px;
}

.canal ul.items li p{
    color: #777;
    font-size: 13px;
    overflow: hidden;
    height: 35px;
    margin-bottom: 2px;
}

/*MOBILE*/


.mobile .canal {
    width: 100%;
    min-width: 320px;
}

.mobile .canal ul.items li p,
.mobile .canal ul.items li:nth-child(n+5),
.mobile .canal ul.items li .social{
    display: none;
}

.mobile .canal ul.items li {
    height: auto;
    padding: 10px 6px 10px 6px;
    margin: 1px 1px 1px 1px;
    width: 100%;
}

.mobile .canal ul.items li img {
    width: 120px;
    height: 80px;
    float: left;
}

.mobile .canal ul.items li .imagen{
    width: 120px;
}

.mobile .canal ul.items li .contenido{
    position: absolute;
    margin: 0px 0px 0px 130px;
}

.mobile .canal ul.items li h2,
.mobile .canal ul.items li h1 {
    font-size: 13px;
    color: #0776af;
    text-shadow: 0px 0px 1px rgba(0,0,0,0.5);
}

.mobile .canal ul.items li h2{
    height: 80px;
}

.mobile .canal ul.items li:first-child span {
    height: 80px;
    width: 100%;
    position: absolute;
    bottom: 4px;
    margin: 0px;
    background-color: #020202;
    opacity: 0.6;
    display: block;
}

.mobile .canal ul.items li:first-child div.contenido {
    overflow: hidden;
    clear: both;
    padding: 10px 10px 10px 10px;
    margin: 0px;
    bottom: 4px;
    width: auto;
}

.mobile .canal ul.items li:first-child {
    padding: 0px;
    margin: 0px;
    position: relative;
    left: 0px;
}

.mobile .canal ul.items li:first-child h1 {
    color: white;
    font-family: Ubuntu;
    text-decoration: none;
    z-index: 1;
    text-shadow: 4px 4px 4px rgba(0,0,0,0.5);
    font-weight: bold;
    font-size: 17px;
    margin: 5px 10px 2px 0px;
    line-height: 17px;
}

.mobile .canal ul.items li:first-child p {
    color: white;
    z-index: 1;
    text-decoration: none;
    bottom: 0px;
    margin: 0px;
    opacity: 0.8;
    height: 35px;
    overflow: hidden;
}
.mobile .canal ul.items li:first-child .imagen{
    width: 100%;
}

.mobile .canal ul.items li:first-child img {
    width: 100%;
    height: auto;
}